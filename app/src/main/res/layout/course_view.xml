<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_red_light"
    android:layout_marginStart="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp">

    <TextView
        android:id="@+id/course_view_name"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Course name"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:orientation="vertical">
        <TextView
            android:id="@+id/course_view_teacher1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Teacher1"
            android:layout_gravity="center"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/course_view_teacher2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Teacher2"
            android:layout_gravity="center"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/course_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginEnd="24dp"
            android:layout_weight="0"
            android:text="Total contents : 00"/>
    </LinearLayout>

</LinearLayout>